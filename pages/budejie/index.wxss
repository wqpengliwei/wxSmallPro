/* pages/budejie/index.wxss */

.body>view:nth-of-type(1) {
  width: 100%;
  text-align: center;
  color: #c83127;
  line-height: 2rem;
  font-size: 1rem;
}

.listItems {
  border: 1pt solid gray;
  border-radius: 0.5rem;
  width: 92%;
  margin: 0 auto 1rem auto;
  padding: 0.5rem 0;
}

.listItems>view {
  padding: 0 1rem;
  font-size: 0.7rem;
  line-height: 1rem;
  margin-bottom: 0.5rem;
}

.listItems>image {
  margin: 0 auto;
  display: block;
}

.videoClass {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(125, 125, 125, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
}

.videoClass video {
  width: 90%;
  height: 76%;
}
